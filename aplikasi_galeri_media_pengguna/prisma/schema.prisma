generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Media {
  id        Int      @id @default(autoincrement())
  filename  String
  filepath  String
  mimetype  String
  size      Int
  uploadedAt DateTime @default(now())
}
